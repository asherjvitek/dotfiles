{
    "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.29/schema.json",
    "app_specific_configuration_path": "$Env:USERPROFILE/applications.yaml",
    "window_hiding_behaviour": "Cloak",
    "cross_monitor_move_behaviour": "Insert",
    "default_workspace_padding": 0,
    "default_container_padding": 0,
    "border": true,
    "border_width": 2,
    "border_style": "Square",
    "border_offset": -1,
    "theme": {
        "palette": "Base16",
        "name": "Tokyodark",
        "unfocused_border": "Base03",
        "bar_accent": "Base0D"
    },
    "stackbar": {
        "height": 20,
        "mode": "OnStack",
        "tabs": {
            "width": 300
        }
    },
    "monitors": [
        {
            "workspaces": [
                {
                    "name": "1",
                    "layout": "Columns"
                },
                {
                    "name": "2",
                    "layout": "Columns"
                },
                {
                    "name": "3",
                    "layout": "Columns"
                },
                {
                    "name": "4",
                    "layout": "Columns"
                },
                {
                    "name": "5",
                    "layout": "Columns"
                },
                {
                    "name": "6",
                    "layout": "Columns"
                },
                {
                    "name": "7",
                    "layout": "Columns"
                }
            ]
        }
    ]
}
